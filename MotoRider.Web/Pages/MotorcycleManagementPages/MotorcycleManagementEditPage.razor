@page "/motorcycle-management/edit/{Id}"

<div>
    @if (!string.IsNullOrWhiteSpace(ErrorMessage))
    {
        <div class="alert alert-danger w-25 mx-auto mt-3 text-center" role="alert">
            @ErrorMessage
        </div>
    }

    <h2 class="text-center mt-5">Motorcycle edit</h2>

    <hr class="w-75" />

    <div class="container w-25 text-center">
        <EditForm Model="@MotorcycleModel" OnValidSubmit="@HandleEditMotorcycle">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="make">Make:</label>
                <InputText class="form-control" id="make" @bind-Value="MotorcycleModel.Make" />
                <ValidationMessage For="@(() => MotorcycleModel.Make)" />
            </div>

            <div class="form-group">
                <label for="model">Model:</label>
                <InputText class="form-control" id="model" @bind-Value="MotorcycleModel.Model" />
                <ValidationMessage For="@(() => MotorcycleModel.Model)" />
            </div>

            <div class="form-group">
                <label for="yearOfManufacture">Year of manufacture:</label>
                <InputNumber class="form-control" id="yearOfManufacture" @bind-Value="MotorcycleModel.YearOfManufacture" />
                <ValidationMessage For="@(() => MotorcycleModel.YearOfManufacture)" />
            </div>

            <div class="form-group">
                <label for="mileage">Mileage:</label>
                <InputNumber class="form-control" id="mileage" @bind-Value="MotorcycleModel.Mileage" />
                <ValidationMessage For="@(() => MotorcycleModel.Mileage)" />
            </div>

            <div class="form-group">
                <label for="price">Price:</label>
                <InputNumber class="form-control" id="price" @bind-Value="MotorcycleModel.Price" />
                <ValidationMessage For="@(() => MotorcycleModel.Price)" />
            </div>

            <div class="form-group">
                <label for="availableForRent">Available for rent:</label>
                <InputCheckbox class="form-control" id="availableForRent" @bind-Value="MotorcycleModel.AvailableForRent" />
                <ValidationMessage For="@(() => MotorcycleModel.AvailableForRent)" />
            </div>

            <button class="btn btn-outline-success w-100 mt-3" type="submit">Edit</button>
            <a class="btn btn-outline-danger w-100 mt-3" href="/motorcycle-management" role="button">Cancel</a>
        </EditForm>
    </div>

    <hr class="w-75" />

    <div class="w-75 mx-auto mb-5">
        <a class="btn btn-outline-danger" href="/motorcycle-management" role="button">Back to motorcycles</a>
    </div>
</div>