@page "/motorcycle-management"

<div>
    @if (!string.IsNullOrWhiteSpace(ErrorMessage))
    {
        <div class="alert alert-danger w-25 mx-auto mt-3 text-center" role="alert">
            @ErrorMessage
        </div>
    }

    <h2 class="text-center mt-5">Motorcycle management</h2>

    <hr class="w-75" />

    <div class="container">
        <table class="table table-striped table-hover text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Available for rent</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Motorcycle motorcycle in MotorcyclesModel)
                {
                    <tr>
                        <th>@motorcycle.Id</th>
                        <td>@motorcycle.Make @motorcycle.Model</td>
                        <td>$@motorcycle.Price</td>
                        <td>@(motorcycle.AvailableForRent ? "✔" : "❌")</td>
                        <td class="w-25">
                            <a class="btn btn-outline-primary" href="/motorcycle-management/details/@motorcycle.Id" role="button">Details</a>
                            <a class="btn btn-outline-warning" href="/motorcycle-management/edit/@motorcycle.Id" role="button">Edit</a>
                            <button class="btn btn-outline-danger" type="button" @onclick="() => HandleDeleteMotorcycle(motorcycle.Id)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <hr class="w-75" />

    <div class="w-75 mx-auto">
        <a class="btn btn-outline-success" href="/motorcycle-management/create" role="button">Create a motorcycle</a>
    </div>
</div>
