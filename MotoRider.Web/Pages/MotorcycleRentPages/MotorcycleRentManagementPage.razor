@page "/rent-management"

<div>
    @if (!string.IsNullOrWhiteSpace(ErrorMessage))
    {
        <div class="alert alert-danger w-25 mx-auto mt-3 text-center" role="alert">
            @ErrorMessage
        </div>
    }

    <h2 class="text-center mt-5">Motorcycle rent management</h2>

    <hr class="w-75" />

    <div class="container">
        <table class="table table-striped table-hover text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Date rented</th>
                    <th>Rented until</th>
                    <th>Price</th>
                    <th>Completed</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Rent rent in RentModel)
                {
                    <tr>
                        <th>@rent.Id</th>
                        <td>@rent.DateRented.ToShortDateString()</td>
                        <td>@rent.RentedUntil.ToShortDateString()</td>
                        <td>$@rent.Price</td>
                        <td>@(rent.Completed ? "✔" : "❌")</td>
                        <td class="w-25">
                            <a class="btn btn-outline-primary" href="/rent-management/details/@rent.Id" role="button">Details</a>
                            <a class="btn btn-outline-warning" href="/rent-management/edit/@rent.Id" role="button">Edit</a>
                            <button class="btn btn-outline-danger" type="button" @onclick="() => HandleDeleteMotorcycleRent(rent.Id)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <hr class="w-75" />
</div>
