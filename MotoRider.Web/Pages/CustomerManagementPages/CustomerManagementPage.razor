@page "/customer-management"

<div>
    @if (!string.IsNullOrWhiteSpace(ErrorMessage))
    {
        <div class="alert alert-danger w-25 mx-auto mt-3 text-center" role="alert">
            @ErrorMessage
        </div>
    }

    <h2 class="text-center mt-5">Customer management</h2>

    <hr class="w-75" />

    <div class="container">
        <table class="table table-striped table-hover text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>First name</th>
                    <th>Last name</th>
                    <th>Phone number</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Customer customer in CustomersModel)
                {
                    <tr>
                        <th>@customer.Id</th>
                        <td>@customer.FirstName</td>
                        <td>@customer.LastName</td>
                        <td>@customer.PhoneNumber</td>
                        <td class="w-25">
                            <a class="btn btn-outline-primary" href="/customer-management/details/@customer.Id" role="button">Details</a>
                            <a class="btn btn-outline-warning" href="/customer-management/edit/@customer.Id" role="button">Edit</a>
                            <button class="btn btn-outline-danger" type="button" @onclick="() => HandleDeleteCustomer(customer.Id)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <hr class="w-75" />

    <div class="w-75 mx-auto">
        <a class="btn btn-outline-success" href="/customer-management/create" role="button">Create a customer</a>
    </div>
</div>
