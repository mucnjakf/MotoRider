@page "/register"

<div>
    @if (!string.IsNullOrWhiteSpace(ErrorMessage))
    {
        <div class="alert alert-danger w-25 mx-auto mt-3 text-center" role="alert">
            @ErrorMessage
        </div>
    }

    <h2 class="text-center mt-5">Register</h2>

    <hr class="w-75" />

    <div class="container w-25 text-center">
        <EditForm Model="@UserModel" OnValidSubmit="@HandleRegisterUser">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label for="username">Username:</label>
                <InputText class="form-control" id="username" @bind-Value="UserModel.Username" />
                <ValidationMessage For="@(() => UserModel.Username)" />
            </div>

            <div class="form-group">
                <label for="password">Password:</label>
                <InputText type="password" class="form-control" id="password" @bind-Value="UserModel.Password" />
                <ValidationMessage For="@(() => UserModel.Password)" />
            </div>

            <div class="form-group">
                <label for="firstName">First name:</label>
                <InputText class="form-control" id="firstName" @bind-Value="UserModel.FirstName" />
                <ValidationMessage For="@(() => UserModel.FirstName)" />
            </div>

            <div class="form-group">
                <label for="lastName">Last name:</label>
                <InputText class="form-control" id="lastName" @bind-Value="UserModel.LastName" />
                <ValidationMessage For="@(() => UserModel.LastName)" />
            </div>

            <button class="btn btn-outline-success w-100 mt-3" type="submit">Register</button>
            <a class="btn btn-outline-danger w-100 mt-3" href="/" role="button">Cancel</a>
        </EditForm>
    </div>

    <hr class="w-75" />
</div>
